{% extends "base.html.twig" %}
{% block body %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RBNB | Accueil</title>
</head>
<body>
    
    <div class="row d-flex flex-row justify-content-center title pb-3">
        <h1 class="row d-flex flex-row justify-content-center">Bienvenue sur RBNB</h1>
    </div>    
        <a href="{{ path('accueil') }}"><img src="/css/assets/logo.png" alt="logo RBNB"class="logo"></a>
    
        <a href="{{ path('app_annonce_new') }}" class="upload">Mettre mon logement sur RBNB</a>
    <div class="row d-flex flex-row justify-content-center">
        {% for annonce in annonces %}
        
        <div class="card border-primary text-white bg-info mb-4 me-5 mt-4" style="width: 15%;">
             {% if annonce.fileName is null %}
                    <img src="{{ asset('images/default.jpg') }}"
                         alt="image par défault d'une maison" class="card-img-top" />
                         {% else %} 
                         <img src="/images/{{annonce.fileName}}"
                                 alt="image de la maison" class="card-img-top" />
                         {% endif %}     
            
            Prix par nuit: {{ annonce.prix }}€ <br>
                Nombre de couchage: {{ annonce.nombreCouchage}}
                <br>
               
                    <div class="country">{{ annonce.city }}</div>{{ annonce.country }}
                        
                
            </div>
            {% endfor %}
        
</body>
</html>

{% endblock %}